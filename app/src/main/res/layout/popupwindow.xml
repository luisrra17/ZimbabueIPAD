<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/next">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TU TURNO"
        android:textSize="25dp"
        android:id="@+id/textViewPop2"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/textViewPop"
        android:paddingRight="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="JUGADOR   "
        android:id="@+id/textViewPop"
        android:textSize="25dp"
        android:textColor="#000000"

        android:layout_below="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:paddingTop="1dp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignTop="@+id/textViewPop2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="N"
        android:id="@+id/textViewPop3"
        android:textSize="28dp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textViewPop"
        android:layout_toEndOf="@+id/textViewPop" />


</RelativeLayout>